<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:with field='resources' type='org.ovirt.engine.ui.common.CommonApplicationResources' />
    <ui:style type="org.ovirt.engine.ui.common.widget.AddRemoveRowWidget.WidgetStyle">
        .mainPanel {
            height: 450px;
            width: 100%;
        }

        .buttonStyle {
            margin-left: 2px;
        }

        .contentPanel {
            border-bottom: black 1px solid;
            margin: 5px 0px 15px 0px;
            padding: 15px 0px 15px 0px;
        }

        .headerStyle {
            font-weight: bold;
        }

        .addFenceAgentLabel {
            font-style: italic;
            float: left;
        }

        .addButton {
            float: right;
        }

    </ui:style>

    <g:FlowPanel>
        <g:Label ui:field="header" addStyleNames="{style.headerStyle}"/>
        <g:FlowPanel ui:field="contentPanel" addStyleNames="{style.contentPanel}" />
        <g:Label ui:field="newAgentLabel" addStyleNames="{style.addFenceAgentLabel}" />
        <b:Button ui:field="newAgentButton" addStyleNames="{style.addButton} {style.buttonStyle}" />
    </g:FlowPanel>

</ui:UiBinder>
