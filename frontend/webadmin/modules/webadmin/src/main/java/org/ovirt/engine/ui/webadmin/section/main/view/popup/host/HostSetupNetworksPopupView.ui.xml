<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:d="urn:import:org.ovirt.engine.ui.common.widget.dialog" xmlns:e="urn:import:org.ovirt.engine.ui.webadmin.widget.editor"
	xmlns:f="urn:import:org.ovirt.engine.ui.webadmin.widget.footer" xmlns:ce="urn:import:org.ovirt.engine.ui.common.widget.editor"
	xmlns:p="urn:import:org.ovirt.engine.ui.webadmin.section.main.view.popup.host.panels">

	<ui:with field='constants' type='org.ovirt.engine.ui.webadmin.ApplicationConstants' />

	<ui:style type="org.ovirt.engine.ui.webadmin.section.main.view.popup.host.panels.NetworkPanelsStyle">
		.unassignedtitle {
			font-size: small;
			text-align: center;
			margin-bottom: 5px;
		}

		.assignedtitle {
			font-size: small;
			text-align: center;
			margin-left: 210px;
			margin-bottom: 5px;
		}

		.nicstitle {
			font-size: small;
			text-align: center;
			margin-left: 80px;
			margin-bottom: 5px;
		}

		.statusLabel {
			font-size: 15px;
			font-weight: bold;
			color: gray;
			padding-left: 20px;
			padding-top: 5px;
		}

		.errorLabel {
			font-size: 15px;
			font-weight: bold;
			color: red;
			padding-left: 20px;
			padding-top: 5px;
		}

		.itemPanel {
			border-width: 1px;
			border-style: solid;
			width: 100%;
			font-family: Arial,sans-serif !important;
			font-size: 13px !important;
			color: black;
		}

		.networkGroupDragOver {
			border-color: black !important;
			box-shadow: 1px 1px 1px 1px rgba(33, 33, 33, 0.3);
		}

		.networkPanel {
			background-color: #FFFFFF;
			border-color: #C5C5C5;
			cursor: move;
			height: 36px;
		}

		.networkPanel:HOVER {
			background-color: #F6F6F6;
			box-shadow: 1px 1px 1px 1px rgba(33, 33, 33, 0.3);
		}

		.mgmtNetwork {
			font-weight: bold;
		}

		.nicPanel {
			background-color: #CED8DF;
			border-color: #7A8D9A;
			cursor: move;
			height: 27px;
		}

		.nicPanel:HOVER {
			background-color: #BBBBBB;
			box-shadow: 1px 1px 1px 1px rgba(33, 33, 33, 0.3);
		}

		.bondPanel {
			height: auto;
			background-color: #EFEFEF;
		}

		.bondPanel:HOVER {
			background-color: #EFEFEF;
		}

		.groupPanel {
			border-color: #999999;
			background-color: #F6F6F6;
			border-width: 1px;
			border-style: solid;
			width: 100%;
		}

		.unassignedNetworksPanel {
			border-width: 1px;
			border-style: solid;
			border-color: #F6F6F6;
			width: 100%;
			height: 100%;
			background-color: #F6F6F6;
		}

		.actionButtonNetwork {
			padding: 8px;
		}

		.actionButtonBond {
			padding: 5px 8px;
		}

		.networkImageBorder {
			border: 1px solid #C5C5C5;
		}
				
		.emptyPanel {
			border: 1px dashed gray;
			color: gray;
			height: 36px;
			width: 100%;
		}

		.checkCon {
			width: 100%;
			padding: 5px;
		}

		.commitChanges{
			width: 100%;
			padding: 5px;
		}

		.allNicsPanel{
			background-color: #F6F6F6;
		}

		.statusPanel{
			background-color: #F6F6F6;
			height: 30px;
			border-bottom: 1px solid #C5C5C5;
		}

		.errorPanel{
			background-color: pink;
			height: 30px;
			border-bottom: 1px solid #C5C5C5;
		}

		.checkBoxesPanel{
			border-top: 1px solid #C5C5C5;
			width: 100%;
		}

		.separator {
			background-color: #CED8DF;
			width: 100%;
			height: 100%;
		}

		.requiredTitlePanel {
			background-color: #778899;
			width: 100%;
			height: 36px;
			border-color: #778899;
			border-style: solid;
			border-width:1px;
		}

		.requiredLabel{
			text-align: center;
			font-weight: bold;
			padding-top: 10px;
		}


	</ui:style>

	<d:SimpleDialogPanel width="900px" height="600px">
		<d:content>
			<g:HTMLPanel>
				<g:SimplePanel ui:field="statusPanel">
					<f:StatusLabel ui:field="status"/>
				</g:SimplePanel>
				<g:HorizontalPanel spacing="10" width="100%" height="79%" verticalAlignment="ALIGN_TOP">
					<g:Cell width="69%" height="100%">
						<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_LEFT">
						<g:HorizontalPanel>
							<g:Label text="{constants.interfaces}" styleName="{style.nicstitle}" />
							<g:Label text="{constants.assignedLogicalNetworks}" styleName="{style.assignedtitle}" />
						</g:HorizontalPanel>
						<g:ScrollPanel height="370px">
							<e:AnimatedVerticalPanel ui:field="nicList" width="100%" spacing="10" styleName="{style.allNicsPanel}"/>
						</g:ScrollPanel>
						</g:VerticalPanel>
					</g:Cell>
					<g:Cell width="1%" height="100%">
						<g:HTMLPanel styleName="{style.separator}" >
						</g:HTMLPanel>
					</g:Cell>
					<g:Cell width="30%" height="100%">
						<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_LEFT">
							<g:Label text="{constants.unassignedLogicalNetworks}" styleName="{style.unassignedtitle}" />
							<g:ScrollPanel height="370px">
								<p:UnassignedNetworksPanel ui:field="networkList"/>
							</g:ScrollPanel>
						</g:VerticalPanel>
					</g:Cell>
				</g:HorizontalPanel>
				<g:VerticalPanel styleName="{style.checkBoxesPanel}" >
					<g:HorizontalPanel>
						<ce:EntityModelCheckBoxEditor ui:field="checkConnectivity" />
						<d:InfoIcon ui:field="checkConnInfo"/>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<ce:EntityModelCheckBoxEditor ui:field="commitChanges" />
						<d:InfoIcon ui:field="commitChangesInfo"/>
					</g:HorizontalPanel>
				</g:VerticalPanel>
			</g:HTMLPanel>
		</d:content>
	</d:SimpleDialogPanel>

</ui:UiBinder>
