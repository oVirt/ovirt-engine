<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:d="urn:import:org.ovirt.engine.ui.common.widget.dialog"
        xmlns:e="urn:import:org.ovirt.engine.ui.common.widget.editor"
        xmlns:ge="urn:import:org.ovirt.engine.ui.common.widget.editor.generic"
        xmlns:t="urn:import:org.ovirt.engine.ui.common.widget.dialog.tab"
        xmlns:p="urn:import:org.ovirt.engine.ui.webadmin.widget.provider"
        xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:with field='constants' type='org.ovirt.engine.ui.webadmin.ApplicationConstants'/>
    <ui:style type="org.ovirt.engine.ui.webadmin.section.main.view.popup.host.HostInstallPopupView.Style">
        .errorMessageLabel {
            color: #CD2127;
            margin-top: 10px;
            margin-left: 5px;
        }

        .headerAuthLabel {
            font-weight: bold;
            margin-top: 10px;
        }

        .headerFp {
            margin: 5px;
            margin-bottom: 5px;
        }

        .pkStyle {
            resize: none;
            background-color: gray;
        }

        .radioButton {
            margin-right: 2px;
        }

        .fetchLink {
            margin: 3px;
            font-size: 15pt;
            width: 450px;
        }

        .content {
            width: 100%;
        }

        .container {
            width: 100%;
        }

        .topElement {
            padding-top: 15px;
        }

        .radioLabel {
            padding-left: 20px;
        }

        .floatLeft {
            float: left;
        }

    </ui:style>

    <d:SimpleDialogPanel width="750px" height="435px">
        <d:content>
            <t:DialogTabPanel ui:field="tabPanel" height="100%">
                <t:tab>
                    <t:DialogTab ui:field="hostPopupGeneralTab" label="{constants.hostPopupGeneralTabLabel}">
                        <t:content>
                            <b:Container addStyleNames="{style.container}">
                                <b:Row addStyleNames="{style.topElement}">
                                    <b:Column size="LG_12">
                                        <g:Label ui:field="authLabel" addStyleNames="{style.headerAuthLabel}"/>
                                    </b:Column>
                                </b:Row>
                                <b:Row>
                                    <ge:StringEntityModelTextBoxEditor ui:field="userNameEditor" usePatternFly="true" labelColSize="LG_4" widgetColSize="LG_8"/>
                                </b:Row>
                                <b:Row>
                                    <b:Column size="LG_4">
                                        <g:RadioButton ui:field="rbPassword" addStyleNames="{style.floatLeft}" />
                                        <g:Label ui:field="rbPasswordLabel" text="{constants.hostPasswordLabel}" addStyleNames="{style.radioLabel}" />
                                    </b:Column>
                                    <b:Column size="LG_8">
                                        <ge:StringEntityModelPasswordBoxEditor ui:field="passwordEditor" usePatternFly="true" />
                                    </b:Column>
                                </b:Row>
                                <b:Row>
                                    <b:Column size="LG_4">
                                        <g:RadioButton ui:field="rbPublicKey" addStyleNames="{style.floatLeft}"/>
                                        <g:Label ui:field="rbPublicKeyLabel" text="{constants.hostPublicKeyLable}" addStyleNames="{style.radioLabel}" />
                                    </b:Column>
                                    <b:Column size="LG_8">
                                        <ge:StringEntityModelTextAreaLabelEditor ui:field="publicKeyEditor" usePatternFly="true" />
                                    </b:Column>
                                </b:Row>
                                <b:Row>
                                    <b:Column size="LG_12">
                                        <ge:EntityModelCheckBoxEditor ui:field="overrideIpTablesEditor" usePatternFly="true"/>
                                    </b:Column>
                                </b:Row>
                                <b:Row>
                                    <ge:StringEntityModelLabelEditor ui:field="hostVersionEditor" usePatternFly="true" labelColSize="LG_4" widgetColSize="LG_8"/>
                                </b:Row>
                                <b:Row>
                                    <e:ListModelListBoxEditor ui:field="isoEditor" usePatternFly="true" labelColSize="LG_4" widgetColSize="LG_8"/>
                                </b:Row>
                                <b:Row>
                                    <b:Column size="LG_12">
                                        <ge:EntityModelCheckBoxEditor ui:field="activateHostAfterInstallEditor" usePatternFly="true"/>
                                    </b:Column>
                                </b:Row>
                            </b:Container>
                        </t:content>
                    </t:DialogTab>
                </t:tab>
                <t:tab>
                    <t:DialogTab ui:field="networkProviderTab" label="{constants.networkProviderButtonLabel}">
                        <t:content>
                            <p:HostNetworkProviderWidget ui:field="networkProviderWidget" />
                        </t:content>
                    </t:DialogTab>
                </t:tab>
                <t:tab>
                    <t:DialogTab ui:field="hostedEngineTab" label="{constants.hostedEngineLabel}">
                        <t:content>
                            <b:Container addStyleNames="{style.container}">
                                <b:Row addStyleNames="{style.topElement}">
                                    <e:ListModelRadioGroupEditor ui:field="hostedEngineDeployActionsEditor"
                                                                 usePatternFly="true"
                                                                 label="{constants.hostedEngineDeploymentAction}"
                                                                 labelColSize="LG_6" widgetColSize="LG_12"/>
                                </b:Row>
                            </b:Container>
                        </t:content>
                    </t:DialogTab>
                </t:tab>
            </t:DialogTabPanel>
        </d:content>
    </d:SimpleDialogPanel>

</ui:UiBinder>
