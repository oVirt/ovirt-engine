<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:style>
        .height {
            height: 470px;
        }

        .scrollable {
            width: 100%;
            height: 100%;
            overflow-y: auto;
        }
    </ui:style>

    <b:Container fluid="true">
        <b:Row>
            <b:Column size="SM_12">
                <g:SplitLayoutPanel ui:field="splitLayoutPanel" addStyleNames="{style.height}">
                    <g:center>
                        <g:FlowPanel ui:field="typePanel" addStyleNames="{style.scrollable}" />
                    </g:center>
                     <g:south size="150">
                        <g:FlowPanel ui:field="detailsPanel" addStyleNames="{style.scrollable}" />
                    </g:south>
                 </g:SplitLayoutPanel>
            </b:Column>
        </b:Row>
    </b:Container>
</ui:UiBinder>
