<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:d="urn:import:org.ovirt.engine.ui.common.widget.dialog"
             xmlns:e="urn:import:org.ovirt.engine.ui.common.widget.editor"
             xmlns:ge="urn:import:org.ovirt.engine.ui.common.widget.editor.generic"
             xmlns:w="urn:import:org.ovirt.engine.ui.common.widget"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:style type="org.ovirt.engine.ui.webadmin.section.main.view.popup.host.HostFenceAgentPopupView.Style">
        .container {
            width: 100%;
            padding-top: 10px !important;
        }

        .optionsExplanationLabel {
            padding: 0px 5px;
        }

        .fencingOptionsLink {
          margin-left: 12px;
        }
    </ui:style>

    <d:SimpleDialogPanel width="500px" height="500px">
      <d:content>
        <g:HTMLPanel styleName="container {style.container}">
          <b:Row>
            <ge:StringEntityModelTextBoxEditor ui:field="pmAddressEditor" usePatternFly="true" labelColSize="SM_6" widgetColSize="SM_6" />
          </b:Row>
          <b:Row>
            <ge:StringEntityModelTextBoxEditor ui:field="pmUserNameEditor" usePatternFly="true" labelColSize="SM_6" widgetColSize="SM_6" />
          </b:Row>
          <b:Row>
            <ge:StringEntityModelPasswordBoxEditor ui:field="pmPasswordEditor" usePatternFly="true" labelColSize="SM_6" widgetColSize="SM_6" />
          </b:Row>
          <b:Row>
            <e:ListModelListBoxEditor ui:field="pmTypeEditor" usePatternFly="true" labelColSize="SM_6" widgetColSize="SM_6" />
          </b:Row>
          <b:Row>
            <ge:IntegerEntityModelTextBoxEditor ui:field="pmPortEditor" usePatternFly="true" labelColSize="SM_6" widgetColSize="SM_6" />
          </b:Row>
          <b:Row>
            <ge:StringEntityModelTextBoxEditor ui:field="pmSlotEditor" usePatternFly="true" labelColSize="SM_6" widgetColSize="SM_6" />
          </b:Row>
          <b:Row>
            <ge:StringEntityModelTextBoxEditor ui:field="pmOptionsEditor" usePatternFly="true" labelColSize="SM_6" widgetColSize="SM_6" />
          </b:Row>
          <b:Row>
            <b:Column size="SM_12">
              <g:Label ui:field="pmOptionsExplanationLabel" />
              <ge:EntityModelCheckBoxEditor ui:field="pmEncryptOptionsEditor" usePatternFly="true" removeFormGroup="true" />
            </b:Column>
          </b:Row>
          <b:Row>
            <b:Column size="SM_12">
              <ge:EntityModelCheckBoxEditor ui:field="pmSecureEditor" usePatternFly="true" removeFormGroup="true" />
            </b:Column>
          </b:Row>
          <b:Row>
            <b:Column size="SM_12">
              <w:UiCommandButton ui:field="testButton" />
              <g:Label ui:field="testMessage" />
            </b:Column>
          </b:Row>
          </g:HTMLPanel>
      </d:content>
    </d:SimpleDialogPanel>

</ui:UiBinder>
