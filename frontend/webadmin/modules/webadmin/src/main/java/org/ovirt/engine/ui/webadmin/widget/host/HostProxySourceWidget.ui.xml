<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:e="urn:import:org.ovirt.engine.ui.common.widget.editor"
    xmlns:ge="urn:import:org.ovirt.engine.ui.common.widget.editor.generic"
    xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:style>
        .button {
            padding: 0px 0px;
            border: none;
            background: none;
        }

        .container {
            width: 95.4%;
        }

        .noMargin {
           margin: 0px;
        }

        .bold {
            font-weight: bolder;
        }

        .editColumn {
            padding: 0px 0px 0px 5px;
        }

        .upDownPadding {
            padding: 0px;
        }

        .rowPadding {
            padding-top: 2px;
        }

        .downArrow {
            left: 1px;
        }
    </ui:style>

    <b:Container addStyleNames="{style.container}">
      <b:Row addStyleNames="{style.rowPadding}">
        <b:Column size="SM_1">
          <b:Row>
            <b:Column size="SM_6" addStyleNames="{style.editColumn}">
              <g:Label ui:field="orderLabel" addStyleNames="{style.bold}"/>
            </b:Column>
          </b:Row>
        </b:Column>
        <b:Column size="SM_9">
          <g:Label ui:field="proxyLabel" />
        </b:Column>
        <b:Column size="SM_1" addStyleNames="{style.editColumn}">
          <b:Row addStyleNames="{style.noMargin}">
            <b:Column size="SM_6" addStyleNames="{style.noMargin} {style.upDownPadding}">
              <b:Button ui:field="up" />
            </b:Column>
            <b:Column size="SM_6" addStyleNames="{style.noMargin} {style.upDownPadding} {style.downArrow}">
              <b:Button ui:field="down" />
            </b:Column>
          </b:Row>
        </b:Column>
      </b:Row>
    </b:Container>
</ui:UiBinder>
