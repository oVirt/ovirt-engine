<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:e="urn:import:org.ovirt.engine.ui.common.widget.editor"
    xmlns:ge="urn:import:org.ovirt.engine.ui.common.widget.editor.generic"
    xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:style>
        .button {
            padding: 0px 0px;
            border: none;
            background: none;
        }

        .container {
            width: 96.4%;
        }

        .noMargin {
           margin: 0px;
        }

        .bold {
            font-weight: bolder;
        }

        .editColumn {
            padding: 0px 0px 0px 5px;
        }

        .upDownPadding {
            padding: 0px;
        }

        .upDownButton {
            width: 18px;
            height: 18px;
            padding-left: 4px;
            padding-top: 0px;
            line-height: 16px;
        }

        .rowPadding {
            padding-top: 2px;
        }
    </ui:style>

    <b:Container addStyleNames="{style.container}">
      <b:Row addStyleNames="{style.rowPadding}">
        <b:Column size="LG_1">
          <b:Row>
            <b:Column size="LG_6" addStyleNames="{style.editColumn}">
              <g:Label ui:field="orderLabel" addStyleNames="{style.bold}"/>
            </b:Column>
          </b:Row>
        </b:Column>
        <b:Column size="LG_9">
          <g:Label ui:field="proxyLabel" />
        </b:Column>
        <b:Column size="LG_1" addStyleNames="{style.editColumn}">
          <b:Row addStyleNames="{style.noMargin}">
            <b:Column size="LG_6" addStyleNames="{style.noMargin} {style.upDownPadding}">
              <g:PushButton ui:field="up" text="/\" addStyleNames="{style.upDownButton}" />
            </b:Column>
            <b:Column size="LG_6" addStyleNames="{style.noMargin} {style.upDownPadding}">
              <g:PushButton ui:field="down" text="\/" addStyleNames="{style.upDownButton}" />
            </b:Column>
          </b:Row>
        </b:Column>
      </b:Row>
    </b:Container>
</ui:UiBinder>
