<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:w="urn:import:org.ovirt.engine.ui.common.widget.action">

    <ui:style>
        .actionPanel {
            padding-top: 5px;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX">
        <g:north size="30">
            <w:AbstractActionPanel ui:field="actionPanel" addStyleNames="{style.actionPanel}" />
        </g:north>

        <g:center>
            <g:ScrollPanel ui:field="scrollPanel">
                <g:Widget ui:field="dataDisplayWidget" />
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>
