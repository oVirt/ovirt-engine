<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='constants' type='org.ovirt.engine.ui.common.CommonApplicationConstants'/>

    <ui:style type="org.ovirt.engine.ui.common.widget.uicommon.instanceimages.InstanceImagesEditor.InstanceImagesWidgetStyle">
        .buttonStyle {
            margin-left: 2px;
            position: relative;
            top: -26px;
        }

        .titleStyle {
            float: left;
            width: 100%;
        }

        .titleStylePadding {
            padding: 0 5px;
            margin-left: 5px;
        }

        .mainPanel {
            width: 100%;
        }

        .contentPanel {
            padding-right: 10px;
            margin-left: 5px;
        }

    </ui:style>

    <g:FlowPanel ui:field="mainPanel" addStyleNames="{style.mainPanel}">
        <g:Label ui:field="title" addStyleNames="{style.titleStyle} {style.titleStylePadding}" text="{constants.instanceImages}"/>
        <g:FlowPanel ui:field="contentPanel" addStyleNames="{style.contentPanel}"/>
    </g:FlowPanel>
</ui:UiBinder>