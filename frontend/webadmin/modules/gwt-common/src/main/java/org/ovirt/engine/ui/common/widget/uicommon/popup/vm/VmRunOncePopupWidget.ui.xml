<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:d="urn:import:org.ovirt.engine.ui.common.widget.dialog"
  xmlns:e="urn:import:org.ovirt.engine.ui.common.widget.editor"
  xmlns:ge="urn:import:org.ovirt.engine.ui.common.widget.editor.generic"
  xmlns:w="urn:import:org.ovirt.engine.ui.common.widget"
  xmlns:vm="urn:import:org.ovirt.engine.ui.common.widget.uicommon.popup.vm"
  xmlns:k="urn:import:org.ovirt.engine.ui.common.widget.form.key_value"
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

  <ui:with field='resources' type='org.ovirt.engine.ui.common.CommonApplicationResources' />
  <ui:with field='constants' type='org.ovirt.engine.ui.common.CommonApplicationConstants'/>

  <ui:style type="org.ovirt.engine.ui.common.widget.uicommon.popup.vm.VmRunOncePopupWidget.Style">
    .widgetStyle {
      overflow-y: hidden;
    }

    .topPanel {
      display: flex;
      flex-direction: column;
    }

    .topPanel > div:first-child {
      min-height: 375px;
      max-height: 375px;
      margin-bottom: 15px;
      overflow-x: hidden;
    }

    .volatileRun {
      flex-grow: 0;
      flex-shrink: 0;
      max-height: 20px;
    }

    .volatileRun > div {
      padding: 0;
    }

    .panelStyle {
      table-layout: fixed;
      background: #e5ecff;
      border-top: 2px solid white;
      width: 100%;
      flex-grow: 1;
      flex-shrink: 1;
    }

    /* DisclosurePanel header section */
    .panelStyle a[class=header] {
      font-weight: bold;
    }

    .sectionLabel {
      font-weight: bold;
      margin-top: 10px;
      margin-bottom: 5px;
    }

    .refreshButton {
      font-size: 12px;
      height: 14px;
      line-height: 14px;
      width: 12px;
      margin-top: 5px;
      padding: 2px;
      background: transparent;
      border: 1px solid transparent;
    }

    .bootSequenceButton {
        font-weight: bold;
        margin-bottom: 5px;
    }

    .floatLeft {
        float: left;
    }

    .patternFlyRadio {
        padding-left: 10px;
        padding-right: 10px;
        position: relative;
    }

    .infoIcon {
        float: left;
        padding-left: 2px;
    }

    </ui:style>
    <g:FlowPanel addStyleNames="{style.topPanel}">
        <g:ScrollPanel>
            <g:FlowPanel>
                <g:DisclosurePanel ui:field="generalBootOptionsPanel" label="{constants.runOncePopupBootOptionsLabel}" addStyleNames="{style.panelStyle}">
                    <b:Container ui:field="generalBootOptionsContainer" fluid="true">
                        <b:Row>
                            <b:Column size="SM_6">
                                <ge:EntityModelCheckBoxEditor ui:field="attachFloppyEditor" label="{constants.runOncePopupAttachFloppyLabel}" addStyleNames="{style.floatLeft} " usePatternFly="true" removeFormGroup="true" />
                            </b:Column>
                            <b:Column size="SM_6">
                                <e:ListModelListBoxEditor ui:field="floppyImageEditor" usePatternFly="true" />
                            </b:Column>
                        </b:Row>
                        <b:Row>
                            <b:Column size="SM_5">
                                <ge:EntityModelCheckBoxEditor ui:field="attachIsoEditor" label="{constants.runOncePopupAttachIsoLabel}" addStyleNames="{style.floatLeft} " usePatternFly="true" removeFormGroup="true" />
                            </b:Column>
                            <b:Column size="SM_1">
                                <g:PushButton ui:field="isoImagesRefreshButton" addStyleNames="{style.refreshButton}">
                                    <g:upFace image='{resources.refreshButtonImage}' />
                                </g:PushButton>
                            </b:Column>
                            <b:Column size="SM_6">
                                <e:ListModelListBoxEditor ui:field="isoImageEditor" usePatternFly="true" />
                            </b:Column>
                        </b:Row>
                        <b:Row>
                            <b:Column size="SM_5">
                                <ge:EntityModelCheckBoxEditor ui:field="attachWgtEditor" label="{constants.runOncePopupAttachWgtLabel}" addStyleNames="{style.floatLeft} " usePatternFly="true" removeFormGroup="true" />
                            </b:Column>
                        </b:Row>
                        <b:Row>
                            <b:Column size="SM_12">
                                <ge:EntityModelCheckBoxEditor ui:field="bootMenuEnabledEditor" label="{constants.bootMenuEnabled}" addStyleNames="{style.floatLeft} " usePatternFly="true" removeFormGroup="true" />
                            </b:Column>
                        </b:Row>
                        <b:Row>
                            <b:Column size="SM_12">
                                <ge:EntityModelCheckBoxEditor ui:field="runAndPauseEditor" label="{constants.runOncePopupRunAndPauseLabel}" addStyleNames="{style.floatLeft} " usePatternFly="true" removeFormGroup="true" />
                            </b:Column>
                        </b:Row>
                        <b:Row>
                            <b:Column size="SM_12">
                                <g:Label ui:field="bootSequenceLabel" text="{constants.runOncePopupBootSequenceLabel}" />
                            </b:Column>
                        </b:Row>
                        <b:Row>
                            <b:Column size="SM_10" ui:field="bootSequenceColumn">
                            </b:Column>
                            <b:Column size="SM_2">
                                <b:Button ui:field="bootSequenceUpButton" addStyleNames="{style.bootSequenceButton}"
                                    enabled="false" text="{constants.bootSequenceUpButtonLabel}" />
                                <b:Button ui:field="bootSequenceDownButton" addStyleNames="{style.bootSequenceButton}"
                                    enabled="false" text="{constants.bootSequenceDownButtonLabel}" />
                            </b:Column>
                        </b:Row>
                        <b:Row>
                            <b:Column size="SM_12">
                                <ge:EntityModelCheckBoxEditor ui:field="runAsStatelessEditor" label="{constants.runOncePopupRunAsStatelessLabel}" addStyleNames="{style.floatLeft} " usePatternFly="true" removeFormGroup="true" />
                            </b:Column>
                        </b:Row>
                    </b:Container>
                </g:DisclosurePanel>
                <g:DisclosurePanel ui:field="linuxBootOptionsPanel" label="{constants.runOncePopupLinuxBootOptionsLabel}" addStyleNames="{style.panelStyle}">
                    <b:Container ui:field="linuxBootOptionsContainer" fluid="true">
                        <b:Row>
                            <b:Column size="SM_5">
                                <g:Label text="{constants.runOncePopupKernelPathLabel}" />
                            </b:Column>
                            <b:Column size="SM_1">
                                <g:PushButton ui:field="linuxBootOptionsRefreshButton" addStyleNames="{style.refreshButton}">
                                   <g:upFace image='{resources.refreshButtonImage}'/>
                                </g:PushButton>
                            </b:Column>
                            <b:Column size="SM_6">
                                <e:ListModelTypeAheadChangeableListBoxEditor ui:field="kernelImageEditor" usePatternFly="true" />
                            </b:Column>
                        </b:Row>
                        <b:Row>
                            <e:ListModelTypeAheadChangeableListBoxEditor ui:field="initrdImageEditor" label="{constants.runOncePopupInitrdPathLabel}" usePatternFly="true" labelColSize="SM_6" widgetColSize="SM_6" />
                        </b:Row>
                        <b:Row>
                            <ge:StringEntityModelTextBoxEditor ui:field="kernelParamsEditor" label="{constants.runOncePopupKernelParamsLabel}" usePatternFly="true" labelColSize="SM_6" widgetColSize="SM_6" />
                        </b:Row>
                    </b:Container>
                </g:DisclosurePanel>
                <g:DisclosurePanel ui:field="initialRunPanel" label="{constants.runOncePopupInitialRunLabel}" addStyleNames="{style.panelStyle}">
                    <b:Container ui:field="initialRunContainer" fluid="true">
                        <b:Row>
                            <b:Column size="SM_12">
                                <ge:EntityModelCheckBoxEditor ui:field="cloudInitEnabledEditor" label="{constants.runOncePopupCloudInitLabel}" addStyleNames="{style.floatLeft} " usePatternFly="true" removeFormGroup="true" />
                            </b:Column>
                        </b:Row>
                        <b:Row>
                            <b:Column size="SM_6">
                                <ge:EntityModelCheckBoxEditor ui:field="attachSysprepEditor" label="{constants.runOncePopupSysprepLabel}" addStyleNames="{style.floatLeft} " usePatternFly="true" removeFormGroup="true" />
                            </b:Column>
                        </b:Row>
                        <vm:RunOnceVmInitWidget ui:field="vmInitWidget" usePatternFly="true" />
                        <g:FlowPanel ui:field="runOnceSpecificSysprepOptions">
                            <b:Row>
                                <b:Column size="SM_6">
                                    <g:Label text="{constants.runOncePopupSysPrepDomainNameLabel}"/>
                                </b:Column>
                                <b:Column size="SM_6">
                                    <w:ComboBox ui:field="sysPrepDomainNameComboBox" />
                                </b:Column>
                            </b:Row>
                            <b:Row>
                                <b:Column size="SM_12">
                                    <ge:EntityModelCheckBoxEditor ui:field="useAlternateCredentialsEditor" label="{constants.runOnceUseAlternateCredentialsLabel}" addStyleNames="{style.floatLeft} " usePatternFly="true" removeFormGroup="true" />
                                </b:Column>
                            </b:Row>
                            <b:Row>
                                <ge:StringEntityModelTextBoxEditor ui:field="sysPrepUserNameEditor" label="{constants.runOncePopupSysPrepUserNameLabel}" usePatternFly="true" labelColSize="SM_6" widgetColSize="SM_6" />
                            </b:Row>
                            <b:Row>
                                <ge:StringEntityModelPasswordBoxEditor ui:field="sysPrepPasswordEditor" label="{constants.runOncePopupSysPrepPasswordLabel}" usePatternFly="true" labelColSize="SM_6" widgetColSize="SM_6" />
                            </b:Row>
                            <b:Row>
                                <ge:StringEntityModelPasswordBoxEditor ui:field="sysPrepPasswordVerificationEditor" label="{constants.runOncePopupSysPrepPasswordVerificationLabel}" usePatternFly="true" labelColSize="SM_6" widgetColSize="SM_6" />
                            </b:Row>
                        </g:FlowPanel>
                    </b:Container>
                </g:DisclosurePanel>
                <g:DisclosurePanel ui:field="systemPanel" label="{constants.systemVmPopup}" addStyleNames="{style.panelStyle}">
                    <b:Container ui:field="systemContainer" fluid="true">
                        <b:Row>
                            <e:ListModelTypeAheadChangeableListBoxEditor ui:field="emulatedMachine" label="{constants.emulatedMachineLabel}" usePatternFly="true" labelColSize="SM_6" widgetColSize="SM_6" />
                        </b:Row>
                        <b:Row>
                            <e:ListModelTypeAheadChangeableListBoxEditor ui:field="customCpu" label="{constants.cpuModelLabel}" usePatternFly="true" labelColSize="SM_6" widgetColSize="SM_6" />
                        </b:Row>
                    </b:Container>
                </g:DisclosurePanel>
                <g:DisclosurePanel ui:field="hostPanel" label="{constants.hostVmPopup}" addStyleNames="{style.panelStyle}">
                    <b:Container ui:field="hostContainer" fluid="true">
                        <b:Row>
                            <b:Column size="SM_12">
                                <g:Label addStyleNames="{style.sectionLabel}" text="{constants.runOnVmPopup}" />
                            </b:Column>
                        </b:Row>
                        <b:Row>
                            <b:Column size="SM_12">
                                <ge:EntityModelRadioButtonEditor ui:field="isAutoAssignEditor" label="{constants.anyHostInClusterVmPopup}" usePatternFly="true" removeFormGroup="true" />
                            </b:Column>
                        </b:Row>
                        <b:Row>
                            <b:Column size="SM_6">
                                <g:RadioButton ui:field="specificHost" addStyleNames="{style.floatLeft}" />
                                <g:Label addStyleNames="{style.patternFlyRadio} {style.floatLeft}" text="{constants.specificVmPopup}" />
                            </b:Column>
                            <b:Column size="SM_6">
                                <e:ListModelListBoxEditor ui:field="defaultHostEditor" usePatternFly="true" />
                            </b:Column>
                      </b:Row>
                  </b:Container>
            </g:DisclosurePanel>
            <g:DisclosurePanel ui:field="displayProtocolPanel" label="{constants.consoleVmPopup}" addStyleNames="{style.panelStyle}">
                <b:Container ui:field="displayProtocolContainer" fluid="true">
                    <b:Row>
                        <b:Column size="SM_12">
                            <ge:EntityModelRadioButtonEditor ui:field="runOnceHeadlessModeEditor" label="{constants.headlessModeVmPopup}" removeFormGroup="true" usePatternFly="true" addStyleNames="{style.floatLeft}"/>
                            <d:InfoIcon ui:field="runOnceHeadlessModeEnabledInfoIcon" addStyleNames="{style.infoIcon}"/>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_12">
                            <ge:EntityModelRadioButtonEditor ui:field="displayConsoleVncEditor" label="{constants.runOncePopupDisplayConsoleVncLabel}" removeFormGroup="true" usePatternFly="true" />
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <e:ListModelListBoxEditor ui:field="vncKeyboardLayoutEditor" label="{constants.vncKeyboardLayoutVmPopup}" usePatternFly="true" labelColSize="SM_6" widgetColSize="SM_6" />
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_12">
                            <ge:EntityModelRadioButtonEditor ui:field="displayConsoleSpiceEditor" label="{constants.runOncePopupDisplayConsoleSpiceLabel}" removeFormGroup="true" usePatternFly="true" />
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_12">
                            <ge:EntityModelCheckBoxEditor ui:field="spiceFileTransferEnabledEditor" label="{constants.spiceFileTransferEnabled}" removeFormGroup="true" usePatternFly="true" />
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_12">
                            <ge:EntityModelCheckBoxEditor ui:field="spiceCopyPasteEnabledEditor" label="{constants.spiceCopyPasteEnabled}" removeFormGroup="true" usePatternFly="true" />
                        </b:Column>
                    </b:Row>
                </b:Container>
            </g:DisclosurePanel>
            <g:DisclosurePanel ui:field="customPropertiesPanel" label="{constants.customPropsVmPopup}" addStyleNames="{style.panelStyle}">
                <b:Container ui:field="customPropertiesContainer" fluid="true">
                    <k:KeyValueWidget ui:field="customPropertiesSheetEditor" usePatternFly="true" />
                </b:Container>
            </g:DisclosurePanel>
        </g:FlowPanel>
    </g:ScrollPanel>
    <w:EntityModelWidgetWithInfo ui:field="volatileRunEditorWithInfo" addStyleNames="{style.volatileRun}" usePatternFly="true" labelColSize="SM_6" />
  </g:FlowPanel>
</ui:UiBinder>
