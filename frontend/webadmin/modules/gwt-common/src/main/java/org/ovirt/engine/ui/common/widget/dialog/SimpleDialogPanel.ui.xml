<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='resources' type='org.ovirt.engine.ui.common.CommonApplicationResources' />

	<ui:style type="org.ovirt.engine.ui.common.widget.dialog.SimpleDialogPanel.Style">
		.header {
			position: absolute;
			top: 5px;
			left: 0px;
			right: 0px;
		}
		
		.headerRightPanel {
			position: absolute;
			right: 5px;
		}
		
		.headerLeftPanel {
			position: absolute;
			left: 5px;
		}
		
		.headerCenterPanel {
			position: absolute;
			background: url(images/dialog_header_background_repetitive.png) repeat-x;
			height: 27px;
			line-height: 27px;
			width: auto;
			left: 27px;
			right: 123px;
		}
		
		.headerTitle {
			text-align: left;
			font-size: 14px;
			font-weight: bold;
			color: white;
			margin-left: 5px;
			padding-left: 3px;
		}
		
		.content {
			border: 1px solid #CED8DF;
			position: absolute;
			padding: 0px;
			top: 34px;
			bottom: 35px;
			left: 6px;
			right: 6px;
		}
		
		.footer {
			position: absolute;
			right: 16px;
			bottom: 9px;
			width: 95%;
		}
		
		.footerButton {
			float: right;
			font-size: 12px;
			margin-left: 4px;
			cursor: hand;
			cursor: pointer;
		}
		
		.contentWidget {
			width: 100%;
			height: 100%;
			overflow: auto;
			position: absolute;
		}

		.helpIconButton {
			position: absolute;
			background: transparent;
			border: 1px solid transparent;
			line-height: 32px;
			vertical-align: middle;
			top: 0px;
			right: 28px;
			padding: 1px;
			cursor: hand;
			cursor: pointer;
			z-index: 1;
		}

		.closeIconButton {
			position: absolute;
			background: transparent;
			border: 1px solid transparent;
			line-height: 30px;
			vertical-align: middle;
			top: 0px;
			right: 6px;
			padding: 1px;
			cursor: hand;
		    cursor: pointer;
		    z-index: 1;
		}
	</ui:style>

	<g:HTMLPanel>
		<g:FlowPanel addStyleNames="{style.header}">
			<g:SimplePanel ui:field="headerLeftPanel" addStyleNames="{style.headerLeftPanel}">
				<g:Image resource='{resources.dialogLogoInfoImage}' />
			</g:SimplePanel>
			<g:SimplePanel ui:field="headerCenterPanel" addStyleNames="{style.headerCenterPanel} {style.headerTitle}" />
			<g:SimplePanel ui:field="headerRightPanel" addStyleNames="{style.headerRightPanel}">
				<g:FlowPanel>
					<g:Image resource='{resources.dialogHeaderImage}' />
					<g:PushButton ui:field='helpIconButton' addStyleNames="{style.helpIconButton}" visible="false">
						<g:upFace image='{resources.dialogIconHelp}' />
						<g:downFace image='{resources.dialogIconHelpDown}' />
						<g:upHoveringFace image='{resources.dialogIconHelpRollover}' />
					</g:PushButton>
					<g:PushButton ui:field='closeIconButton' addStyleNames="{style.closeIconButton}">
						<g:upFace image='{resources.dialogIconClose}' />
						<g:downFace image='{resources.dialogIconCloseDown}' />
						<g:upHoveringFace image='{resources.dialogIconCloseRollover}' />
					</g:PushButton>
				</g:FlowPanel>
			</g:SimplePanel>
		</g:FlowPanel>

		<g:SimplePanel ui:field="contentPanel" addStyleNames="{style.content}" />

		<g:HTMLPanel addStyleNames="{style.footer}">
			<g:FlowPanel ui:field="footerButtonPanel" />
			<g:FlowPanel ui:field="footerStatusPanel" />
			<div style="clear: both;" />
		</g:HTMLPanel>
	</g:HTMLPanel>

</ui:UiBinder>
