<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='constants' type='org.ovirt.engine.ui.common.CommonApplicationConstants' />

    <ui:style type="org.ovirt.engine.ui.common.widget.profile.ProfilesInstanceTypeEditor.ProfileWidgetStyle">
        .mainPanel {
            border-top: 1px solid black;
            float: left;
        }

        .mainPanelPadding {
            padding-left: 5px;
            margin-left: 5px;
        }

        .headerLabel {
            padding-top: 5px;
        }

        .buttonStyle {
            margin-left: 2px;
        }

        .fullWidth {
            width: 100%;
        }
    </ui:style>

    <g:FlowPanel ui:field="mainPanel" addStyleNames="{style.mainPanel} {style.mainPanelPadding}" >
        <g:Label ui:field="headerLabel" text="{constants.assignNics}" addStyleNames="{style.headerLabel}" />
        <g:FlowPanel ui:field="contentPanel" addStyleNames="pite_content_pfly_fix"/>
    </g:FlowPanel>

</ui:UiBinder>
