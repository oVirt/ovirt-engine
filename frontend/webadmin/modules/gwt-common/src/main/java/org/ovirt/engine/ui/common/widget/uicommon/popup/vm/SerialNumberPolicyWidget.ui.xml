<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:e="urn:import:org.ovirt.engine.ui.common.widget.editor"
             xmlns:ge="urn:import:org.ovirt.engine.ui.common.widget.editor.generic"
             xmlns:w="urn:import:org.ovirt.engine.ui.common.widget"
             xmlns:d="urn:import:org.ovirt.engine.ui.common.widget.dialog">

  <ui:with field='constants' type='org.ovirt.engine.ui.common.CommonApplicationConstants' />

  <ui:style>
    .container {
      width: 100%;
      float: left;
    }

    .overrideCheckboxInfoAdjust {
      margin-top: 2px;
      margin-left: -6px;
    }
  </ui:style>

  <g:FlowPanel addStyleNames="{style.container}">
    <w:EntityModelWidgetWithInfo ui:field="overrideSerialNumberPolicyWithInfo" addInfoIconStyleName="{style.overrideCheckboxInfoAdjust}" />
    <g:FlowPanel addStyleNames="container {style.container}">
        <e:EnumRadioEditor ui:field="serialNumberPolicy"/>
    </g:FlowPanel>
    <ge:StringEntityModelTextBoxOnlyEditor addStyleNames="container {style.container}" ui:field="customSerialNumber" usePatternFly="true" />
  </g:FlowPanel>

</ui:UiBinder>
