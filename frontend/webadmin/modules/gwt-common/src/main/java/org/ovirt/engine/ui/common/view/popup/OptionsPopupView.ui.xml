<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:d="urn:import:org.ovirt.engine.ui.common.widget.dialog"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:ge="urn:import:org.ovirt.engine.ui.common.widget.editor.generic">

    <ui:with field='constants' type='org.ovirt.engine.ui.common.CommonApplicationConstants'/>

    <ui:style>

        .publicKeyEditor {
            height: 140px;
            width: 100%;
            padding-left: 5px;
            line-height: normal;
            font-family: "Courier New", Courier, monospace;
        }

        .inlineBlock {
            display: inline-block;
            vertical-align: middle;
            padding-right: 5px;
        }

        .overrideClearBoth {
            float: left;
        }

        .noBottomMargin {
            margin-bottom: 0;
        }

        .verticalSpacing {
            margin-top: 10px;
        }

        .indentation {
            padding-left: 50px;
        }

        .infoIcon img {
            vertical-align: baseline;
        }
    </ui:style>
    <d:SimpleDialogPanel width="600px" height="450px">
        <d:content>
            <b:Container fluid="true">
                <b:Row addStyleNames="{style.verticalSpacing}">
                    <b:Column size="SM_12">
                        <g:Label ui:field="publicKeyLabel" text="{constants.consolePublicKeyLabel}" addStyleNames="{style.inlineBlock}" />
                        <d:InfoIcon ui:field="consolePublicKeyInfoIcon" addStyleNames="{style.inlineBlock} {style.infoIcon}"/>
                    </b:Column>
                </b:Row>
                <b:Row addStyleNames="{style.verticalSpacing}">
                    <b:Column size="SM_12" addStyleNames="{style.indentation}">
                        <ge:StringEntityModelTextArea ui:field="publicKeyEditor" addStyleNames="{style.publicKeyEditor}" />
                    </b:Column>
                </b:Row>
                <b:Row addStyleNames="{style.verticalSpacing}">
                    <b:Column size="SM_12">
                        <g:Label ui:field="userSettingsLabel" text="{constants.userSettingsLabel}" addStyleNames="{style.inlineBlock}" />
                    </b:Column>
                </b:Row>
                <b:Row addStyleNames="{style.verticalSpacing}">
                    <b:Column size="SM_12" addStyleNames="{style.indentation}">
                        <ge:EntityModelCheckBoxEditor ui:field="localStoragePersistedOnServerCheckBox"
                                                      label="{constants.persistGridSettingsOnServer}"
                                                      removeFormGroup="true"
                                                      usePatternFly="true"
                                                      addStyleNames="{style.overrideClearBoth}"/>
                        <d:InfoIcon ui:field="localStoragePersistedOnServerInfoIcon" addStyleNames="{style.inlineBlock} {style.infoIcon}"/>
                    </b:Column>
                </b:Row>
                <b:Row addStyleNames="{style.verticalSpacing}">
                    <b:Column size="SM_12" addStyleNames="{style.indentation}">
                        <ge:EntityModelCheckBoxEditor ui:field="confirmSuspendingVmCheckBox"
                                                      label="{constants.confirmSuspendingVm}"
                                                      removeFormGroup="true"
                                                      usePatternFly="true"
                                                      addStyleNames="{style.overrideClearBoth}"/>
                    </b:Column>
                </b:Row>
            </b:Container>
        </d:content>
    </d:SimpleDialogPanel>

</ui:UiBinder>
