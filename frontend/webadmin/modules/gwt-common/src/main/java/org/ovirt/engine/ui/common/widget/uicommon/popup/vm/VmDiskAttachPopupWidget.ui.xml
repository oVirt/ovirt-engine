<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:w="urn:import:org.ovirt.engine.ui.common.widget"
             xmlns:ge="urn:import:org.ovirt.engine.ui.common.widget.editor.generic">
    <ui:with field='constants' type='org.ovirt.engine.ui.common.CommonApplicationConstants'/>

    <ui:style>
        .container {
            width: 100%;
            overflow: hidden;
        }

        .messagesLabel {
            color: #CD2127;
        }

        .messagesLabel ul {
            padding-left: 20px;
            margin: 0;
        }

        .mainPanel {
            width: 100%;
            padding: 10px 15px 15px 15px;
        }

        .isPluggedEditor {
            float: right;
            width: 180px;
            text-align: right;
        }

        .attachDiskPanel {
            padding: 2px;
        }

        .header {
            padding: 15px;
        }
    </ui:style>

    <g:FlowPanel addStyleNames="{style.container}">
        <g:FlowPanel addStyleNames="{style.header}">
            <w:RadioButtonPanel ui:field="diskTypePanel" name="diskTypePanel" dataToggle="BUTTONS" />
            <ge:EntityModelCheckBoxEditor ui:field="isPluggedEditor" addStyleNames="{style.isPluggedEditor}" label="{constants.activateVmDiskPopup}" widgetTooltip="{constants.activateVmDiskPopupToolTip}" usePatternFly="true" />
        </g:FlowPanel>
        <g:FlowPanel ui:field="attachDiskContainer" addStyleNames="{style.mainPanel}">
            <w:ValidatedPanelWidget ui:field="attachDiskPanel" />
            <g:FlowPanel ui:field="warningPanel" addStyleNames="{style.messagesLabel}">
                <g:HTML ui:field="messageLabel" />
                <g:HTML ui:field="warningLabel" visible="false" />
            </g:FlowPanel>
        </g:FlowPanel>
    </g:FlowPanel>

</ui:UiBinder>
