<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
        xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html"
        xmlns:t="urn:import:org.ovirt.engine.ui.common.widget.tooltip">

    <ui:import field="org.ovirt.engine.ui.common.css.PatternflyConstants.*" />
    <ui:style>
        .badge {
            float: right;
        }
    </ui:style>

    <t:WidgetTooltip ui:field="alertTooltip">
        <b:Alert ui:field="alert">
            <h:Span ui:field="icon" addStyleNames="{PFICON}" />
            <b:Badge ui:field="badge" addStyleNames="{style.badge}">
                <h:Text ui:field="badgeText" />
            </b:Badge>
            <h:Div ui:field="messagePanel" />
        </b:Alert>
    </t:WidgetTooltip>

</ui:UiBinder>
