<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:e="urn:import:org.ovirt.engine.ui.common.widget.editor"
    xmlns:ge="urn:import:org.ovirt.engine.ui.common.widget.editor.generic">

    <ui:style type="org.ovirt.engine.ui.common.widget.ComboBox.WidgetStyle">
        .listBoxLabel {
            margin-left: 30px;
        }

        .textBoxPosition {
            position: absolute;
            top: 0px;
            width: 100%;
            padding-right: 20px;
        }

        .textBoxEditor {
            margin-top: 2px;
            margin-top: 1px;
            right: 18px;
            right: 20px;
        }

        .textBoxWidget {
            width: 216px;
            margin-top: 1px;
        }

        .textBoxInput {
            border-width: 0px !important;
            font-size: 13px;
        }

        .selectBoxInput {
            height: 23px !important;
        }

        .textBoxLabel {
            display: none;
        }
    </ui:style>

    <g:AbsolutePanel>
        <e:ListModelListBoxEditor ui:field="listBoxEditor" />
        <ge:EntityModelTextBoxEditor ui:field="textBoxEditor" addStyleNames="{style.textBoxEditor} {style.textBoxPosition}" />
    </g:AbsolutePanel>

</ui:UiBinder>
